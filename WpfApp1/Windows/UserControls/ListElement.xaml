<UserControl x:Class="WpfApp1.Windows.UserControls.ListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Border Background="White" BorderBrush="Black" 
            BorderThickness="4px" Padding="5px">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" 
                    BorderThickness="3px">
                <Image Width="200px" Height="200px" Source="{Binding Photo}"></Image>
            </Border>

            <Border Padding="5" Margin="5 0 5 0" Grid.Column="1" 
                    BorderBrush="Black" BorderThickness="2px">
                <StackPanel>
                    <TextBlock FontSize="18">
                        <Run Text="{Binding Name}"></Run>
                        <Run FontWeight="Bold">-</Run>
                        <Run Text="{Binding Type.TypeName}"></Run>
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Производитель:"></Run>
                        <Run Text="{Binding Manufacturer.ManufacturerName}"></Run>
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Поставщик:"></Run>
                        <Run Text="{Binding Supplier.SupplierName}"></Run>
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Единица аренды:"></Run>
                        <Run Text="{Binding RentalUnit}"></Run>
                        <Run Name="run_amount" Text="{Binding AvailableQuantity}"></Run>
                    </TextBlock>

                    <Grid>
                        <TextBlock HorizontalAlignment="Left"
                                   MaxWidth="1000"
                                   TextAlignment="Left" 
                                   TextWrapping="Wrap" 
                                   Margin="0 5 0 0">
                            <Run Text="Описание оборудования:"></Run>
                            <Run Text="{Binding Description}"></Run>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <DockPanel Grid.Column="2" LastChildFill="True">
                <Border Margin="0 0 0 10" DockPanel.Dock="Top" 
                        Height="50" BorderBrush="Black" 
                        BorderThickness="3" Padding="5">
                    <Grid>
                        <TextBlock MaxWidth="200" TextWrapping="Wrap" TextAlignment="Left" VerticalAlignment="Center">
                            <Run Text="Цена аренды:"></Run>
                            <Run Name="run_price" Text="{Binding RentalCost}"></Run>
                            <Run Name="run_newPrice"></Run>
                            <Run Text="(P)"></Run>
                        </TextBlock>
                    </Grid>
                </Border>
                <Border BorderBrush="Black" BorderThickness="3">
                    <TextBlock TextAlignment="Center" 
                               VerticalAlignment="Center">
                        <Run Text="Скидка"></Run>
                        <Run Name="run_discount" Text="{Binding Discount}"></Run>
                        <Run Text="%"></Run>
                    </TextBlock>
                </Border>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
